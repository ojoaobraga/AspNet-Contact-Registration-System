@model ContatoModel
@{
    ViewData["Title"] = "Confirmação Apagar Contato";
}
<div class="text-center">
    <h3>Deseja apagar o contato (@Model.Nome)?</h3>
    
    <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Apagar</a>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Cancelar</a>
</div>